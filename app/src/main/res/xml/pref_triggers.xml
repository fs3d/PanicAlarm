<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="@string/pref_header_triggers">
        <SwitchPreference
            android:defaultValue="true"
            android:key="check_trigger_power"
            android:summary="Enables use of the power button to trigger a panic"
            android:title="@string/pref_title_button_power" />
        <ListPreference
            android:defaultValue="-1"
            android:entries="@array/pref_button_number_titles"
            android:entryValues="@array/pref_button_number_values"
            android:key="list_trigger_powercount"
            android:summary="@string/pref_desc_button_power_count"
            android:title="@string/pref_title_button_power_count" />
        <SwitchPreference
            android:defaultValue="true"
            android:key="check_trigger_mediakey"
            android:summary="@string/pref_desc_button_media"
            android:title="@string/pref_title_button_media" />
        <ListPreference
            android:defaultValue="-1"
            android:entries="@array/pref_button_number_titles"
            android:entryValues="@array/pref_button_number_values"
            android:key="list_trigger_mediacount"
            android:summary="Number of media button presses to trigger a panic"
            android:title="@string/pref_title_button_media_count" />
        <!-- NOTE: ListPreference's summary should be set to its value by the activity code. -->
    </PreferenceCategory>
</PreferenceScreen>