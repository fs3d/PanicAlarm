<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="@string/pref_header_service">
        <SwitchPreference
            android:defaultValue="true"
            android:key="check_enable_boot"
            android:summary="@string/pref_desc_enable_boot"
            android:title="@string/pref_title_enable_boot" />
        <SwitchPreference
            android:defaultValue="false"
            android:key="check_settings_passwd"
